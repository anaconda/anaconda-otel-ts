{
  "name": "anaconda-opentelemetry",
  "version": "0.8.1",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE",
    "package.json"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.17"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.9.0"
  },
  "dependencies": {
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.208.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.208.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.208.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "typedoc": "^0.28.11",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "clean": "rm -rf dist dist-test docs coverage anaconda-opentelemetry-*.tgz .tmp",
    "build": "tsc -p tsconfig.json",
    "prepack": "npm run build",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --selectProjects unit",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --selectProjects integration",
    "coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --selectProjects unit --coverage --detectOpenHandles",
    "docs": "typedoc && export __VER=\"$(npm pkg get version | sed 's/\"//g')\" && tar -vcaf ./anaconda-opentelemetry-html-${__VER}.tgz docs && unset __VER"
  }
}
